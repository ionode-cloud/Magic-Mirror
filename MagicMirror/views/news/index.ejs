<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notices Admin - Magic Mirror Admin Panel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .draggable {
            cursor: move;
        }
        .dragging {
            opacity: 0.5;
            background: #f8f9fa;
        }
        .drag-handle {
            cursor: grab;
            padding: 5px;
            color: #666;
            display: none;
        }
        .drag-handle:hover {
            color: #333;
        }
        .edit-mode .drag-handle {
            display: inline-block;
        }
        .edit-buttons {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
        }
        .edit-buttons button {
            transition: all 0.3s ease;
        }
        .edit-buttons button.d-none {
            display: none !important;
        }
        .card-header {
            position: relative;
        }
        .card-body.edit-mode {
            background-color: #f8f9fa;
        }
        /* टेबल स्टाइल्स */
        .table th {
            vertical-align: middle;
            white-space: nowrap;
        }
        .table td {
            vertical-align: middle;
        }
        .truncate-cell {
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .cell-content {
            max-width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .img-cell {
            width: 80px;
            text-align: center;
        }
        .priority-cell {
            width: 100px;
            text-align: center;
        }
        .date-cell {
            width: 120px;
            text-align: center;
        }
        .actions-cell {
            width: 150px;
            text-align: center;
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Magic Mirror Admin Panel</h1>
        
        <!-- Navigation Tabs -->
        <% if (!locals.user) { %>
            <div class="alert alert-danger text-center" role="alert">
                You are not logged in. Please <a href="/user/login" class="alert-link">login</a> to access the admin panel.
            </div>
        <% } else { %>
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link" href="/">News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/news">Notices</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/college-info">College Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/gallery">Gallery</a>
                </li>
            </ul>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h3>Add New Notice</h3>
                        </div>
                        <div class="card-body">
                            <form action="/news" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="title" name="title" required>
                                </div>
                                <div class="mb-3">
                                    <label for="content" class="form-label">Content</label>
                                    <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Image (Optional)</label>
                                    <input type="file" class="form-control" id="image" name="image" accept="image/*">
                                    <small class="text-muted">Max size: 5MB. Formats: JPG, PNG, GIF</small>
                                </div>
                                <div class="mb-3">
                                    <label for="priority" class="form-label">Priority</label>
                                    <select class="form-select" id="priority" name="priority">
                                        <option value="1">Low</option>
                                        <option value="2">Medium</option>
                                        <option value="3">High</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Add Notice</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">Recent Notices</h3>
                            <div class="edit-buttons">
                                <button class="btn btn-light btn-sm" id="editModeBtn">
                                    <i class="fas fa-sort"></i> Edit Priority Order
                                </button>
                                <button class="btn btn-success btn-sm d-none" id="savePriorityBtn">
                                    <i class="fas fa-save"></i> Save Order
                                </button>
                                <button class="btn btn-danger btn-sm d-none" id="cancelPriorityBtn">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <% if(newsItems.length > 0) { %>
                                <table class="table table-hover" id="noticesTable">
                                    <thead class="table-dark">
                                        <tr>
                                            <th style="width: 40px;"></th>
                                            <th style="width: 25%;">Title</th>
                                            <th style="width: 30%;">Content</th>
                                            <th class="img-cell">Image</th>
                                            <th class="priority-cell">Priority</th>
                                            <th class="date-cell">Date</th>
                                            <th class="actions-cell">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% newsItems.forEach(newsItem => { %>
                                            <tr class="notice-row" data-id="<%= newsItem._id %>" data-priority="<%= newsItem.priority %>">
                                                <td class="drag-handle text-center">
                                                    <i class="fas fa-grip-vertical"></i>
                                                </td>
                                                <td class="truncate-cell">
                                                    <div class="cell-content"><%= newsItem.title %></div>
                                                </td>
                                                <td class="truncate-cell">
                                                    <div class="cell-content"><%= newsItem.content %></div>
                                                </td>
                                                <td class="img-cell">
                                                    <% if(newsItem.imageUrl) { %>
                                                        <img src="<%= newsItem.imageUrl %>" alt="Notice Image" class="img-thumbnail" style="max-width: 50px;">
                                                    <% } else { %>
                                                        <span class="text-muted">No image</span>
                                                    <% } %>
                                                </td>
                                                <td class="priority-cell">
                                                    <% if(newsItem.priority === 1) { %>
                                                        <span class="badge bg-info">Low</span>
                                                    <% } else if(newsItem.priority === 2) { %>
                                                        <span class="badge bg-warning">Medium</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">High</span>
                                                    <% } %>
                                                </td>
                                                <td class="date-cell"><%= newsItem.date.toLocaleDateString() %></td>
                                                <td class="actions-cell">
                                                    <a href="/news/<%= newsItem._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                                    <form action="/news/<%= newsItem._id %>/delete" method="POST" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                                
                                <!-- Pagination Controls -->
                                <div class="d-flex justify-content-center mt-4">
                                    <nav aria-label="Notice pagination">
                                        <ul class="pagination">
                                            <% if (hasPrevPage) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="/news?page=<%= currentPage - 1 %>" aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                            <% } else { %>
                                                <li class="page-item disabled">
                                                    <a class="page-link" href="#" aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                            <% } %>
                                            
                                            <% for(let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link" href="/news?page=<%= i %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                            
                                            <% if (hasNextPage) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="/news?page=<%= currentPage + 1 %>" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                            <% } else { %>
                                                <li class="page-item disabled">
                                                    <a class="page-link" href="#" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </nav>
                                </div>
                            <% } else { %>
                                <p class="text-center">No notices found. Add one!</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.14.0/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const noticesTableBody = document.querySelector('#noticesTable tbody');
            const cardBody = document.querySelector('.card-body');
            let sortable = null;
            
            // Initialize edit mode button
            const editModeBtn = document.getElementById('editModeBtn');
            const savePriorityBtn = document.getElementById('savePriorityBtn');
            const cancelPriorityBtn = document.getElementById('cancelPriorityBtn');
            
            // Function to toggle edit mode
            function toggleEditMode(enabled) {
                const handles = document.querySelectorAll('.drag-handle');
                const tableBody = document.querySelector('#noticesTable tbody');
                
                handles.forEach(handle => {
                    handle.style.display = enabled ? 'block' : 'none';
                });
                
                // Toggle button visibility
                editModeBtn.classList.toggle('d-none', enabled);
                savePriorityBtn.classList.toggle('d-none', !enabled);
                cancelPriorityBtn.classList.toggle('d-none', !enabled);
                
                // Toggle edit mode class on card body
                cardBody.classList.toggle('edit-mode', enabled);
                
                if (enabled) {
                    // Initialize Sortable
                    sortable = new Sortable(tableBody, {
                        handle: '.drag-handle',
                        animation: 150,
                        onSort: function() {
                            console.log('Items reordered');
                        }
                    });
                } else if (sortable) {
                    sortable.destroy();
                    sortable = null;
                }
            }
            
            // Initial state
            toggleEditMode(false);
            
            // Edit mode button click handler
            editModeBtn.addEventListener('click', () => {
                console.log('Edit mode enabled');
                toggleEditMode(true);
            });
            
            // Cancel button click handler
            cancelPriorityBtn.addEventListener('click', () => {
                console.log('Edit mode cancelled');
                location.reload();
            });
            
            // Save button click handler
            savePriorityBtn.addEventListener('click', async () => {
                console.log('Saving priorities...');
                const rows = document.querySelectorAll('#noticesTable tbody tr');
                const items = [];
                
                // Collect all items with their new priorities
                rows.forEach((row, index) => {
                    const id = row.getAttribute('data-id');
                    if (id) {
                        items.push({
                            id: id,
                            priority: rows.length - index
                        });
                    }
                });
                
                console.log('Items to update:', items);
                
                try {
                    // Send update request
                    const response = await fetch('/news/update-priority', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ items })
                    });
                    
                    if (response.ok) {
                        alert('Priorities updated successfully!');
                        location.reload();
                    } else {
                        throw new Error('Failed to update priorities');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to update priorities. Please try again.');
                }
            });
        });
    </script>
</body>
</html> 