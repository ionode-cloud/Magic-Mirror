<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Admin - Magic Mirror Admin Panel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .draggable {
            cursor: move;
        }
        .dragging {
            opacity: 0.5;
            background: #f8f9fa;
        }
        .drag-handle {
            cursor: grab;
            padding: 5px;
            color: #666;
            display: none;
        }
        .drag-handle:hover {
            color: #333;
        }
        .edit-mode .drag-handle {
            display: inline-block;
        }
        .edit-mode .priority-cell {
            display: none;
        }
        .priority-handle {
            display: none;
        }
        .edit-buttons {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
        }
        .edit-buttons button {
            transition: all 0.3s ease;
        }
        .edit-buttons button.d-none {
            display: none !important;
        }
        .card-header {
            position: relative;
        }
        .card-body.edit-mode {
            background-color: #f8f9fa;
        }
        /* Admin header container */
.admin-header {
    padding: 10px 0;
    border-bottom: 1px solid #dee2e6;
}

/* Nav tabs customization */
.admin-header .nav-tabs .nav-link {
    font-weight: 500;
    color: #495057;
    transition: all 0.2s ease;
}

.admin-header .nav-tabs .nav-link:hover {
    color: #0d6efd;
    background-color: #e9ecef;
}

.admin-header .nav-tabs .nav-link.active {
    color: #fff;
    background-color: #0d6efd;
    border-color: #0d6efd;
}

/* User actions (logout) */
.user-actions {
    display: flex;
    align-items: center;
}

.user-actions .logout-btn {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    padding: 0.35rem 0.75rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
}

.user-actions .logout-btn i {
    font-size: 0.9rem;
}

.user-actions .logout-btn:hover {
    background-color: #dc3545;
    color: #fff;
    text-decoration: none;
}

/* Responsive for mobile */
@media (max-width: 768px) {
    .admin-header {
        flex-direction: column;
        gap: 10px;
    }

    .user-actions {
        justify-content: flex-end;
    }
}

    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Magic Mirror Admin Panel</h1>
        
        <!-- Navigation Tabs -->
        <% if (!locals.user) { %>
            <div class="nav nav-tabs mb-4">
                <a class="nav-link" href="/user/login">Login</a>
                <a class="nav-link" href="/user/signup">Sign Up</a>
            </div>
        <% } else { %>
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link active" href="/">News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/news">Notices</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/college-info">College Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/gallery">Gallery</a>
                </li>

            </ul>
             <div class="user-actions d-flex align-items-center">
        <span class="me-2 text-muted">Hello, <%= locals.user.fullName %></span>
        <a href="/logout" class="btn btn-danger btn-sm logout-btn">
            <i class="fas fa-sign-out-alt me-1"></i> Logout
        </a>
    </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h3>Add New News Item</h3>
                        </div>
                        <div class="card-body">
                            <form action="/notices" method="POST">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="title" name="title" required>
                                </div>
                                <div class="mb-3">
                                    <label for="content" class="form-label">Content</label>
                                    <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="priority" class="form-label">Priority</label>
                                    <select class="form-select" id="priority" name="priority">
                                        <option value="1">Low</option>
                                        <option value="2">Medium</option>
                                        <option value="3">High</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Add News Item</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">Recent News</h3>
                            <div class="edit-buttons">
                                <button class="btn btn-light btn-sm" id="editModeBtn">
                                    <i class="fas fa-sort"></i> Edit Priority Order
                                </button>
                                <button class="btn btn-success btn-sm d-none" id="savePriorityBtn">
                                    <i class="fas fa-save"></i> Save Order
                                </button>
                                <button class="btn btn-danger btn-sm d-none" id="cancelPriorityBtn">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <% if(notices.length > 0) { %>
                                <table class="table table-hover" id="newsTable">
                                    <thead class="table-dark">
                                        <tr>
                                            <th style="width: 40px;"></th>
                                            <th>Title</th>
                                            <th>Content</th>
                                            <th>Priority</th>
                                            <th>Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% notices.forEach((notice, index) => { %>
                                            <tr class="notice-row" data-id="<%= notice._id %>" data-priority="<%= notice.priority %>">
                                                <td class="drag-handle text-center">
                                                    <i class="fas fa-grip-vertical"></i>
                                                </td>
                                                <td class="truncate-cell">
                                                    <div class="cell-content"><%= notice.title %></div>
                                                </td>
                                                <td class="truncate-cell">
                                                    <div class="cell-content"><%= notice.content %></div>
                                                </td>
                                                <td class="priority-cell">
                                                    <% if(notice.priority === 1) { %>
                                                        <span class="badge bg-info">Low</span>
                                                    <% } else if(notice.priority === 2) { %>
                                                        <span class="badge bg-warning">Medium</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">High</span>
                                                    <% } %>
                                                </td>
                                                <td><%= notice.date.toLocaleDateString() %></td>
                                                <td>
                                                    <a href="/notices/<%= notice._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                                    <form action="/notices/<%= notice._id %>/delete" method="POST" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                                
                                <!-- Pagination Controls -->
                                <div class="d-flex justify-content-center mt-4">
                                    <nav aria-label="News pagination">
                                        <ul class="pagination">
                                            <% if (hasPrevPage) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="/?page=<%= currentPage - 1 %>" aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                            <% } else { %>
                                                <li class="page-item disabled">
                                                    <a class="page-link" href="#" aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                            <% } %>
                                            
                                            <% for(let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                            
                                            <% if (hasNextPage) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="/?page=<%= currentPage + 1 %>" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                            <% } else { %>
                                                <li class="page-item disabled">
                                                    <a class="page-link" href="#" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </nav>
                                </div>
                            <% } else { %>
                                <p class="text-center">No news items found. Add one!</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.14.0/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const newsTableBody = document.querySelector('#newsTable tbody');
            const cardBody = document.querySelector('.card-body');
            let sortable = null;
            
            // Initialize edit mode button
            const editModeBtn = document.getElementById('editModeBtn');
            const savePriorityBtn = document.getElementById('savePriorityBtn');
            const cancelPriorityBtn = document.getElementById('cancelPriorityBtn');
            
            // Function to toggle edit mode
            function toggleEditMode(enabled) {
                const handles = document.querySelectorAll('.drag-handle');
                const tableBody = document.querySelector('#newsTable tbody');
                
                handles.forEach(handle => {
                    handle.style.display = enabled ? 'block' : 'none';
                });
                
                // Toggle button visibility
                editModeBtn.classList.toggle('d-none', enabled);
                savePriorityBtn.classList.toggle('d-none', !enabled);
                cancelPriorityBtn.classList.toggle('d-none', !enabled);
                
                // Toggle edit mode class on card body
                cardBody.classList.toggle('edit-mode', enabled);
                
                if (enabled) {
                    // Initialize Sortable
                    sortable = new Sortable(tableBody, {
                        handle: '.drag-handle',
                        animation: 150,
                        onSort: function() {
                            console.log('Items reordered');
                        }
                    });
                } else if (sortable) {
                    sortable.destroy();
                    sortable = null;
                }
            }
            
            // Initial state
            toggleEditMode(false);
            
            // Edit mode button click handler
            editModeBtn.addEventListener('click', () => {
                console.log('Edit mode enabled');
                toggleEditMode(true);
            });
            
            // Cancel button click handler
            cancelPriorityBtn.addEventListener('click', () => {
                console.log('Edit mode cancelled');
                location.reload();
            });
            
            // Save button click handler
            savePriorityBtn.addEventListener('click', async () => {
                console.log('Saving priorities...');
                const rows = document.querySelectorAll('#newsTable tbody tr');
                const items = [];
                
                // Collect all items with their new priorities
                rows.forEach((row, index) => {
                    const id = row.getAttribute('data-id');
                    if (id) {
                        items.push({
                            id: id,
                            priority: rows.length - index
                        });
                    }
                });
                
                console.log('Items to update:', items);
                
                try {
                    // Send update request
                    const response = await fetch('/notices/update-priority', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ items })
                    });
                    
                    if (response.ok) {
                        alert('Priorities updated successfully!');
                        location.reload();
                    } else {
                        throw new Error('Failed to update priorities');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to update priorities. Please try again.');
                }
            });
        });
    </script>
</body>
</html> 